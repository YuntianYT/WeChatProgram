<view class="main">
  <view class="container">
    <image class="image" mode="aspectFit" src="../../../../imgs/default.png"></image>
    <view class="item">
      <text class="strong">单元名称：</text>
      <text>{{name}}</text>
    </view>
    <view class="item">
      <text class="strong">单元编号：</text>
      <text>{{element_code}}</text>
    </view>
    <view class="item">
      <text class="strong">联系电话：</text>
      <text>{{tel}}</text>
    </view>
    <view class="item">
      <text class="strong">负责人：</text>
      <text>{{duty_officer}}</text>
    </view>
    <view class="item">
      <text class="strong">联系人：</text>
      <text>{{contact_man}}</text>
    </view>
    <view hidden="{{isLeafNote == 1?true:false}}">
      <button type="warn">添加风险</button>
    </view>
  </view>
</view>